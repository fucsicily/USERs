<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="79dp"
        android:layout_height="83dp"
        android:layout_weight="0.18"
        android:src="@mipmap/ic_launcher"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/input_mail"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="27dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

    <ImageButton
        android:id="@+id/history_bn"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:src = "@mipmap/ic_arrow_forward"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        android:layout_marginEnd="67dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="176dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="79dp" />
    <ImageButton
        android:id="@+id/change_password_bn"
        android:layout_width="0dp"
        android:layout_height="46dp"
        android:src = "@mipmap/ic_arrow_forward"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/history_bn"
        app:layout_constraintTop_toBottomOf="@+id/history_bn"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/history_bn"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="10dp" />
    <TextView
        android:id="@+id/history_text"
        android:layout_width="73dp"
        android:layout_height="22dp"
        android:text="历史动态"
        app:layout_constraintRight_toLeftOf="@+id/history_bn"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/history_bn"
        app:layout_constraintTop_toTopOf="@+id/history_bn"
        android:layout_marginRight="12dp"
        app:layout_constraintVertical_bias="0.92"
        android:layout_marginEnd="12dp"
        tools:layout_editor_absoluteY="198dp" />
    <TextView
        android:id="@+id/change_password_text"
        android:layout_width="74dp"
        android:layout_height="21dp"
        android:text="更改密码"
        tools:layout_constraintTop_creator="1"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/history_text"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/history_text"
        android:layout_marginLeft="0dp" />

</android.support.constraint.ConstraintLayout>